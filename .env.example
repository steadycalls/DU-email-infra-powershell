# Email Infrastructure Automation Configuration
# Copy this file to .env and fill in your API credentials

# Forward Email API Key (required)
# Get your API key from: https://forwardemail.net/en/my-account/security
FORWARD_EMAIL_API_KEY=your_forward_email_api_key_here

# Cloudflare API Token (required)
# Create a token with DNS:Edit permissions: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cloudflare Account ID (optional)
# Find this in your Cloudflare dashboard
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Retry Configuration (optional)
MAX_RETRIES=5
INITIAL_RETRY_DELAY=5
MAX_RETRY_DELAY=300
RATE_LIMIT_DELAY=60

# Verification Configuration (optional)
VERIFICATION_POLL_INTERVAL=30
VERIFICATION_MAX_ATTEMPTS=40

# Processing Configuration (optional)
CONCURRENT_DOMAINS=5

# Logging Configuration (optional)
LOG_LEVEL=INFO
